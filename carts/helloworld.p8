x=64
y=64
face_left=true

function _update()
	prev_x=x
  if (x > 0 and btn(⬅️)) then
    x-=1
  end
  if (x < (127 - 7) and btn(➡️)) then
    x+=1
	end
  if (y > 0 and btn(⬆️)) then
    y-=1
  end
  if (y < (127) and btn(⬇️)) then
    y+=1
  end
	if (prev_x != x) then
		face_left = prev_x < x
	end
	if (btn(❎)) then
		sfx(1)
	end
end

function _draw()
	cls()
	if (face_left) then
		spr(1,x,y,1,1,true)
	else
		spr(1,x,y,1,1)
	end
end
